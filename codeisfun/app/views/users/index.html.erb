<h1 align="center">All Users</h1>
<div align="center">
  <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li class="title">
              UserName: <%= link_to user.username %> <br></li>
            <li>Email: <%= link_to user.email %></li>
            <% if logged_in? and current_user.admin? %>
                <li><%= link_to "Ban This User", {:controller => :users, :action => :ban, id: user.id } ,data: { confirm: "Are you sure?" } %></li>
                <% if user.banned? %>
                    <li><%= link_to "UnBan This User", { :controller => :users, :action => :unban , id: user.id }, data: { confirm: "Are you sure?" }%></li>
                <% end %>
            <%end%>
          </div>
        </div>
      </ul>
  <% end %>
</div>




