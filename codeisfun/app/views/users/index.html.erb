<h1 align="center">All Users</h1>
<div align="center">
  <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li class="article-title">
              <%= link_to user.email, users_index_path(user) %>
            </li>
            <% if logged_in? and current_user.admin? %>
                <li><%= link_to "Delete this user", users_index_path(user) , method: :delete, data: { confirm: "Are you sure you want to delete the user and all their articles?"} %></li>
            <%end%>
          </div>
        </div>
      </ul>
  <% end %>
</div>
