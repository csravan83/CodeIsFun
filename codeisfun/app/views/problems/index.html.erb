<p id="notice"><%= notice %></p>

<h1>Problems</h1>

<table>
  <thead>
    <tr>
      <li><%= link_to 'Problem 1' %></li>
      <li><%= link_to 'Problem 2' %></li>
      <li><%= link_to 'Problem 3' %></li>

      <th>Title</th>
      <th>Description</th>
      <th>Input</th>
      <th>Output</th>
      <th>Tc1</th>
      <th>Tc2</th>
      <th>Tc3</th>
      <th>Status</th>
      <th>Author</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><%= problem.title %></td>
        <td><%= problem.description %></td>
        <td><%= problem.input %></td>
        <td><%= problem.output %></td>
        <td><%= problem.TC1 %></td>
        <td><%= problem.TC2 %></td>
        <td><%= problem.TC3 %></td>
        <td><%= problem.status %></td>
        <td><%= problem.author %></td>
        <td><%= problem.category_id %></td>
        <td><%= link_to 'Show', problem %></td>
        <td><%= link_to 'Edit', edit_problem_path(problem) %></td>
        <td><%= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Problem', new_problem_path %>
