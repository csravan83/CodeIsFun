<h1>New Comment</h1>


<div class="row">
  <div class="col-xs-12">
    <%= form_for(:comment,:url => {:action => "create", :controller => "comments"},:html => {class: "form-horizontal", role: "form"}) do |f| %>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :comment %>
          </div>

          <div class="col-sm-8">
            <%= f.text_area :comment, rows: 3, class: "form-control", placeholder: "Please enter a comment", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="center col-sm-offset-1 col-sm-10">
            <%= f.submit class: "btn btn-primary btn-lg" %>
          </div>
        </div>

<% end %>
  </div>
</div>