<p id="notice"><%= notice %></p>

<h1>Solutions</h1>
<div class="container">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Filename</th>
      <th>Content type</th>
      <th>Problem Id</th>
      <th>User ID</th>
      <th>Solution</th>
      <th>Approval Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solutions.each do |solution| %>
      <% if current_user.admin? %>
              <tr>
                <td><%= solution.filename %></td>
                <td><%= solution.content_type %></td>
                <td><%= solution.problem_id %></td>
                <td><%= solution.user_id %></td>
                <td><%= link_to "Show", problem_solution_path(@problem,solution) , class: "btn btn-info btn-small"%></td>
                <% if solution.solved? %>
                    <td>Already Approved</td>
                <% else %>
                    <td>Approval Pending...</td>
                <% end %>
              </tr>
      <% end %>
      <% if current_user == solution.user and !current_user.admin? %>
          <tr>
            <td><%= solution.filename %></td>
            <td><%= solution.content_type %></td>
            <td><%= solution.problem_id %></td>
            <td><%= solution.user_id %></td>
            <td><%= link_to "Show", problem_solution_path(@problem,solution) , class: "btn btn-info btn-small"%></td>
            <% if solution.solved? %>
                <td>Already Approved</td>
            <% else %>
                <td>Approval Pending...</td>
            <% end %>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

</div>
