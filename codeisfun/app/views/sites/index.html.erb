<div class="center jumbotron">
  <h1>Welcome to CodeIsFun!</h1>
  <h3>Be a better coder :)</h3>
  <% if user_signed_in? and current_user.admin? %>
     <%= link_to 'Admin Dashboard', rails_admin_path, class: "btn btn-danger btn-lg btn-xlarge" %>
  <%end%>

  <%if user_signed_in?%>
      <h3>Hello <%= current_user.email %> Have Fun </h3>
     <%= link_to "Lets Code" , categories_show_path,  class: "btn btn-danger btn-lg btn-xlarge"%>
  <% else %>
      <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-danger btn-lg btn-xlarge" %>
      <%= link_to 'Sign In', new_user_session_path , class: "btn btn-danger btn-lg btn-xlarge" %>

  <% end %>

</div>
